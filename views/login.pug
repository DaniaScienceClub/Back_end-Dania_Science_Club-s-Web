  body#body.noscroll
    //- // Preloader
    //- .loader
    //-   img(src='https://daniascienceclub.cf/img/preloader.svg', alt='Loading...')
    br
    br
    br
    .form
      form.card(action='https://dscapi.herokuapp.com/login', method='POST')
        img(src='https://daniascienceclub.cf/img/logo.svg', height='100px;')
        h Login
        hr
        |             Email:
        input(name='email', type='email', placeholder='example@gmail.com', required='', focus='')
        |             Password:
        .row
          .col-12
            input#password(name='password', type='password', placeholder='Password', required='')
          .eye
            i#eye.fas.fa-eye(onclick='toglePassVisibility()')
            i#eyex.fas.fa-eye-slash(onclick='toglePassVisibility()')
        input(type='submit', value='Login')
        br
        p
          | Haven't registered?
          a(href='https://daniascienceclub.cf/html/form.html')  Register now
      hr
      // jQuery first, then Popper.js, then Bootstrap JS
      script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
