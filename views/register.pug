doctype html
html.noscroll(lang='en')
  include includes/head.pug  
  body
    // Preloader
    .loader
      img(src='https://ducsc.github.io/img/preloader.svg', alt='Loading...')
      p(style="position: fixed;z-index: 99999;top: 0;left: 0;width: 100%;height: 122%;display: flex;justify-content: center;align-items: center;") Collecting Your Data...
    .form(onclick='generateMemberId()')
      form.card(action='/register', method='POST', enctype='multipart/form-data' onsubmit='showLoader()')
        img(src='https://ducsc.github.io/img/logo.svg', height='100px;')
        h Registration Form
        hr
        .row
          .col-xs-12.col-md-6
            | First name:
            input(name='fname', type='text', placeholder='First name', required)
          .col-xs-12.col-md-6
            | Last name:
            input(name='lname', type='text', placeholder='Last name', required)
        |             Email:
        input(name='email', type='email', placeholder='example@gmail.com', required)
        .row
          .col-xs-12.col-md-6
            | Password:
            input#password(name='password', type='password', placeholder='Password', minlength='6', onkeyup='validate();', required)
          .col-xs-12.col-md-6
            | Confirm Password:
            input#cpassword(type='password', placeholder='Retype password', minlength='6', onkeyup='validate();', required)
        |             Roll number:
        input#roll(type='text', maxlength='6' minlength='6' name='roll', pattern='[0-9]{6}', required placeholder='Your roll, ex: 202563')
        .row
          .col-xs-12.col-md-4
            | Shift:
            select#shift(name='shift', required)
              option Day
              option Morning
          .col-xs-12.col-md-4
            | Batch:
            select#batch(name='batch', required)
              option HSC-20
              option HSC-21
              option HSC-19
              option HSC-18
              option HSC-17
              option HSC-16
              option HSC-15
              option HSC-14
              option HSC-13
              option HSC-12
              option HSC-11
              option HSC-10
              option HSC-09
              option HSC-08
              option HSC-07
              option HSC-06
              option HSC-05
              option HSC-04
              option HSC-03
              option HSC-02
              option HSC-01
              option HSC-00
          .col-xs-12.col-md-4
            | Section:
            select#section(name='section', required)
              option S1
              option S2
              option S3
              option S4
        |             Choose your photo (Optional):
        input(type='file', name='photo')
        |             Phone number:
        input(type='tel', name='phone', maxlength='11', placeholder='01XXXXXXXXX', pattern='[0]{1}[1]{1}[1|3|5|6|7|8|9]{1}[0-9]{8}', value='01', required)
        |             Write something about yourself:
        textarea(name='bio', maxlength='50', minlength='10', placeholder='Type about yourself in 10-50 characters' required)
        br
        .row
          .col-5
            h3(style='margin-top:10px') Member ID:
          .col-7
            input#memberId(type='text', name='memberId', readonly)
        input#submitButton(type='submit', value='Submit')
        br
        p
          | Already registered?
          a(href='/login')  Login
      hr
      // Headerbox
      // page contents
      //- i.fa.fa-odnoklassniki-square(aria-hidden='true')
      // jQuery first, then Popper.js, then Bootstrap JS
      script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js', integrity='sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut', crossorigin='anonymous')
      script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js', integrity='sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k', crossorigin='anonymous')
      // Main JavaScript
      script(src='https://ducsc.github.io/js/form.js')
      script.
        const btn = document.querySelector('#submitButton');
        function showLoader(){
          const loader = document.querySelector('.loader');
          loader.classList.remove('hidden');
          };
